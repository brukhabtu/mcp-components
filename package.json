{
  "name": "@mcp/ui-components",
  "version": "0.1.0",
  "description": "Composable web components library for MCP UI built with Lit",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./primitives": {
      "types": "./dist/components/primitives/index.d.ts",
      "default": "./dist/components/primitives/index.js"
    },
    "./layout": {
      "types": "./dist/components/layout/index.d.ts",
      "default": "./dist/components/layout/index.js"
    },
    "./feedback": {
      "types": "./dist/components/feedback/index.d.ts",
      "default": "./dist/components/feedback/index.js"
    },
    "./data-display": {
      "types": "./dist/components/data-display/index.d.ts",
      "default": "./dist/components/data-display/index.js"
    },
    "./controllers": {
      "types": "./dist/controllers/index.d.ts",
      "default": "./dist/controllers/index.js"
    },
    "./contexts": {
      "types": "./dist/contexts/index.d.ts",
      "default": "./dist/contexts/index.js"
    }
  },
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:showcase": "vite build",
    "dev": "vite demo",
    "analyze": "cem analyze --litelement",
    "clean": "rm -rf dist dist-showcase",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "typescript": "^5.9.3",
    "vite": "^6.0.5",
    "storybook": "^10.1.10",
    "@storybook/web-components-vite": "^10.1.10",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "vitest": "^4.0.16",
    "playwright": "^1.57.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  },
  "keywords": [
    "web-components",
    "lit",
    "mcp",
    "ui",
    "design-system"
  ],
  "customElements": "custom-elements.json"
}
